<div class="page-header">
  <h1>Manage Categories</h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th><strong>CATEGORY</strong></th>
      <th><strong>LENDING-PERIOD</strong></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><h5><%= category.name %></h5></td>
        <td><h5><%= category.duration %> days</h5></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'Create', new_category_path, class: "btn" %>

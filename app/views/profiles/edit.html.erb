<div class="page-header">
  <h1><%=@usr.name%></h1>
</div>

<%= form_for(@usr, :as => 'profile', :url => profile_path(@usr.id), :html => { :method => :put }) do |f| %>

  <div><%= f.label :name, "Name" %>
  <%= f.text_field :name %></div>

  <div><%= f.label :das_id, "DAS-ID" %>
  <%= f.text_field :das_id %></div>

  <div><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div><%= f.label :phone_number %>
  <%= f.text_field :phone_number %></div>

  <div><%= f.label :seat_number %>
  <%= f.text_field :seat_number %></div>

  <div><%= f.label :manager, "Manager Name" %>
  <%= f.text_field :manager %></div>

  <div><%= f.label :max_book_count %>
  <%= f.number_field :max_book_count %></div>

  <div><%= f.submit "Update" %></div>
<% end %>

<%= link_to "Back", :back %>

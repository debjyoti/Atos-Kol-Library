<div class = "page-header">
  <h2><%= @usr.name %></h2>
</div>

<% if @usr_issue_history.count > 0 %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th><strong>BOOK</strong></th>
        <th><strong>REQUEST</strong></th>
        <th><strong>ISSUE</strong></th>
        <th><strong>RETURN</strong></th>
      </tr>
    </thead>
    <tbody>
      <%@usr_issue_history.each do |hist|%>
        <tr>
          <td><%= hist.book.try(:title) %></td>
          <td><%= hist.requested_on %> </td>
          <td><%= hist.issued_on %> </td>
          <td><%= hist.returned_on %> </td>
        </tr>
      <%end%>
    </tbody>
  </table>
<%else %>
  <h4> This user has never issued any books. </h4>
<%end%>

<hr>
<br />
<%= link_to 'Back', profiles_path %>

<div class = "page-header">
  <h2><%= @bk.title %></h2>
</div>

<% if @bk_issue_history.count > 0 %>
<table class="table table-hover">
  <thead>
    <tr>
      <th><strong>USER</strong></th>
      <th><strong>REQUEST</strong></th>
      <th><strong>ISSUE</strong></th>
      <th><strong>RETURN</strong></th>
    </tr>
  </thead>
  <tbody>
    <%@bk_issue_history.each do |hist|%>
      <tr>
        <td><%= hist.user.try(:name) %></td>
        <td><%= hist.requested_on %> </td>
        <td><%= hist.issued_on %> </td>
        <td><%= hist.returned_on %> </td>
      </tr>
    <%end%>
  </tbody>
</table>
<%else %>
  <h4> This book has never been issued </h4>
<%end%>

<hr>
<br />
<%= link_to 'Back', manage_books_path %>

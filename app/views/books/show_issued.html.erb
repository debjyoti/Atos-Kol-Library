<div class="page-header">
  <h1>Issued Books</h1>
</div>

<%if @books.count > 0 %>
  <table class='table table-hover'>
    <thead>
      <tr>
        <th><strong>BOOK</strong></th>
        <th><strong>ISSUED-TO</strong></th>
        <th><strong>TILL</strong></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <th><h5><%=book.title%></h5></th>
          <th><h5><%=book.user.name%></h5></th>
          <th><h5><%=book.expires_on%></h5></th>
          <th><h5><%= link_to 'Return', book_return_to_library_path(book.id), method: :put, class: "btn"%></h5></th>
          <th><h5><%= link_to 'Renew', book_renew_duration_path(book.id), method: :put, class: "btn"%></h5></th>
        </tr>
      <% end %>
    </tbody>
  </table>
<%else%>
  <h4>None of your users have issued any books at this time. </h4>
<%end%>
